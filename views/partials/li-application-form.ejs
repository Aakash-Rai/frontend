<form class="form-horizontal" role="form" method="post" enctype="multipart/form-data" <% if (user.registration_status == 0) { %> action="/register-mymlh" <% } else { %> action="/account" <% } %>>

    <div class="form-group row mb-5">
        <label for="github-username-input" class="col-12 col-md-5 col-form-label">
            <h5 class="bold-text app-section-title">GitHub Username</h5>
        </label>

        <div class="col-12 col-md-7">
            <input type="text" class="form-control" id="github-username-input" name="github" placeholder="GitHub Username" value=<%= user.github %>>
        </div>
    </div>

    <div class="form-group row mb-5">

        <label for="resume-upload-input" class="col-12 col-md-5 col-form-label">
            <h5 class="bold-text app-section-title">Resumé</h5>
        </label>

        <div class="col-12 col-md-7">
            <input type="file" class="form-control-file" id="resume-upload-input" name="resume">

        </div>

    </div>

    <div class="form-group row mb-5">

        <label for="short-answer-text" class="col-12 col-form-label">
            <h5 class="bold-text app-section-title"><%= question %></h5>
        </label>

        <div class="col-12">
            <textarea class="form-control" id="short-answer-text" name="short_answer" rows="3" required><%= user.short_answer %></textarea>
        </div>

    </div>


    <div class="form-group row mb-5">

        <label for="grad-year-select" class="col-12 col-md-5 col-form-label">
            <h5 class="bold-text app-section-title">Graduation Year</h5>
        </label>


        <div class="col-12 col-md-7">
            <select class="form-control" id="grad-year-select" name="grad_year">
                <option value="" selected></option>
                <% for (var i=2017; i<2025; i++) { %>ya

                <option value=<%= i %> <% if (user.grad_year   == i) { %> selected <% } %>><%= i %></option>
                <% } %>
            </select>
        </div>



    </div>


    <% if (user.registration_status == 0) { %>
    <p class="text-left" id="registration-terms">We participate in Major League Hacking (MLH) as an MLH Member Event. By accepting, you authorize us to share certain application/registration information for event administration, ranking, MLH admission, and occasional messages about hackathons in line with the <a href="/">MLH Privacy Policy</a>. Also, you understand that by uploading your resumé and GitHub handle, it can potentially be shared with sponsors of HackRU and you may be contacted by recruiters. By accepting, you also agree to the rules and policies of HackRU outlined <a href="http://waiver.hackru.org">here</a>.</p>

    <div id="registration-checkbox">

        <p class="bold-text">
            <input class="mr-2" type="checkbox" name="rules_and_conditions" required>
            I have read and agree with the rules and conditions above.
        </p>

        <p class="bold-text">
            <input class="mr-2" type="checkbox" name="data_sharing" required>
            I agree to the terms of both the <a class="bold-text" href="https://github.com/MLH/mlh-policies/tree/master/prize-terms-and-conditions">MLH Contest Terms and Conditions</a> and the <a class="bold-text" href="https://mlh.io/privacy">MLH Privacy Policy</a>. Please note that you may receive pre and post-event informational e-mails and occasional messages about hackathons from MLH as per the MLH Privacy Policy.
        </p>

    </div>

    <button type="submit" class="btn btn-primary bold-text">Submit</button>



    <% } else { %>

    <button type="submit" class="btn btn-primary bold-text">Save</button>

    <% } %>

</form>
