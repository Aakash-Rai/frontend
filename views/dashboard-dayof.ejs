<!DOCTYPE html>
<% include ./partials/ascii.ejs %>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <script src="./js/custom.js"></script>
    <script src="./js/util.js"></script>
</head>

<body>
<!-- LOGGED IN NAVBAR -->
<% include ./partials/li-nav.ejs %>
<!-- END LOGGED IN NAVBAR -->
<div class="container-fluid">


    <div class="row subpage-section" id="dashboarddayof">

        <div class="col-10">
            <div class="row li-section-title-box">
                <div class="col-12">
                    <h2 class="li-section-title">Dashboard</h2>
                </div>
            </div>
            <!-- <div class="row mt-5"> -->
            <!--  -->
            <!--     <div class="col-12 col-lg-6 mb-5 mb-lg-0"> -->
            <!--         <h1 class="greeting">Welcome, <%= user.mlh_data.first_name %>!</h1> -->
            <!--     </div> -->
            <!-- </div> -->


            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-3 card-container">
                    <div class="row">
                        <div class="col-md-12 card user-info">
                            <div>
                                <img class="qr" src="data:image/png;charset=utf-8;base64,<%= qrimage %>">

                                <h1><%= user.mlh_data.first_name + " " + user.mlh_data.last_name %> </h1>

                                <div class="card-text">
                                    <h4>
                                        <i class="fa fa-fw fa-graduation-cap" aria-hidden="true"></i>
                                        <strong>
                                            <%= user.mlh_data.school.name %>
                                        </strong>
                                    </h4>
                                    <h4>
                                        <i class="fa fa-fw fa-user" aria-hidden="true"></i>
                                        <strong>
                                            <%= user.mlh_data.level_of_study %>
                                        </strong>
                                    </h4>
                                    <h4>
                                        <i class="fa fa-fw fa-lightbulb-o" aria-hidden="true"></i>
                                        <strong>
                                            <%= user.mlh_data.major %>
                                        </strong>
                                    </h4>

                                    <% if (user.github != null) { %>
                                    <h4>
                                        <i class="fa fa-fw fa-github" aria-hidden="true"></i>
                                        <strong>
                                            <a href='https://github.com/<%= user.github %>'>
                                                <%= user.github %>
                                            </a>
                                        </strong>
                                    </h4>
                                    <% } %>

                                    <% if (user.resume != null) { %>
                                    <h4>
                                        <i class="fa fa-fw fa-file-text" aria-hidden="true"></i>
                                        <strong>
                                            <a href='/resume/<%= user.resume %>'>
                                                <%= user.resume %>
                                            </a>
                                        </strong>
                                    </h4>
                                    <% } %>


                                    <br>

                                    <p><a href="account">Edit my profile</a></p>


                                </div>
                            </div>
                        </div>


                        <div class="col-md-12 card">
                            <h1>/gavel</h1>

                            <div class="card-text">
                                <p>Submit cool hacks <a href="https://devpost.com">here</a>!</p>
                                <form id="gavel-form" action="javascript:handleGavelRequest()">
                                    <span class="gavel-form-text">Look up your cool hacks </span>
                                    <input type="text" id="gavel-form-name-input">
                                    <input type="submit" id="gavel-form-submit-input">
                                </form>
                                <div id="gavel-data">

                                </div>
                            </div>

                        </div>

                    </div>
                </div>


                <div class="col-xs-12 col-sm-8 col-md-6 card-container">
                    <div class="row">
                        <div class="col-md-12 card announcements">
                            <h1>/announcements</h1>
                            <div class="card-text">


                                <section class="card-section" id="anouncements-app"><%- anouncementsMarkup %></section>
                            </div>
                        </div>

                        <div class="col-md-12 card">
                            <h1>/upcoming</h1>
                            <div class="card-text upcoming">
                                <section class="card-section" id="events-app"><%- eventsMarkup %></section>

                            </div>
                        </div>


                    </div>
                </div>


                <div class="col-xs-12 col-sm-8 col-md-3 card-container">
                    <div class="row">
                        <div class="col-md-12 card info-bar">
                            <h1>/info</h1>
                            <div class="row">
                                <div class="col-xs-4"><a href="https://www.google.com/maps/place/Rutgers+Athletic+Center/@40.5255273,-74.4432251,17z/data=!3m1!4b1!4m5!3m4!1s0x89c3c799e4acd7af:0xc1b21b4e9a6fa334!8m2!3d40.5255273!4d-74.4410311"><img class="info-bar-pic"
                                                                      src="http://logonoid.com/images/google-maps-logo.png"
                                                                      alt=""></a></div>
                                <div class="col-xs-4"><a href="https://hackruxii.slack.com"><img class="info-bar-pic"
                                                                      src="https://cdn.worldvectorlogo.com/logos/slack-1.svg"
                                                                      alt=""></a></div>
                                <div class="col-xs-4"><a href="https://hackru-sp17.devpost.com/"><img class="info-bar-pic"
                                                                      src="https://devpost-challengepost.netdna-ssl.com/assets/reimagine2/devpost-icon-900856edde1e4a510a65f29a1bde7a2b.svg"
                                                                      alt=""></a></div>

                                <div class="col-xs-12 emergenums">
                                    <h3>Emergency Numbers</h3>
                                    <h5>Carlin: (443) 945-7390</h5>
                                    <h5>RUPD: (732) 932-7211</h5>
                                    <h5>NBPD: (732) 745-5200</h5>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-12 card">
                            <h1>/twitter feed</h1>
                            <a class="twitter-timeline" data-lang="en" data-height="500" data-theme="light"
                               data-link-color="#4BCF7E" href="https://twitter.com/theHackRU">Tweets by theHackRU</a>
                            <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
                        </div>




                    </div>
                </div>


                <div class="col-xs-12 card-container">
                    <div class="row">
                        <div class="col-xs-12 card foodstats">
                            <h1>/meal tracker</h1>

                            <div id="snack-dash">

                                <div id="meal-tracker" class="card">
                                    <canvas id="myChart" height="130px;"></canvas>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>


    </div>


    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->


    <div class="row" id="footer"></div>

    <!-- FOOTER SECTION -->
    <% include ./partials/li-footer.ejs %>
    <!-- END FOOTER SECTION -->
</div>

</body>


<script src="./js/chart.js"></script>
<script src="./js/controller.js"></script>
</html>
